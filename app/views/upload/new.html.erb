<div class= "pagehead">
	<h1>Upload PDF</h1>
</div>
<div class="uploadbody">
<p>Please select the pdf you want to view</p>
<%= form_for(@upload, multipart: true, url: upload_path) do |form| %>
	<div class="choosefile">
		
		  <%= form.file_field :document, :class => "filestyle", :data => { :buttonname => "btn-default", :buttonBefore => true} %>
	  </div>
	  <div class="uploadbtn">
		 <%= form.submit "Upload" %> 
	  </div>
	<% end %>
</div>

